[user]
	name = Vincent Mazenod
	email = vmazenod@gmail.com
[core]
	autocrlf = false
	safecrlf = false
	quotepath = false
[alias]
  co = checkout
  ci = commit
  st = status
  br = branch
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  type = cat-file -t
  dump = cat-file -p
[color]
	ui = true
[credential]
	helper = cache --timeout=3600
[http]
	postBuffer = 1048576000
[diff]
    tool = meld
    guitool = meld
[difftool "meld"]
	path = /usr/bin/meld
[merge]
	tool = meld
[mergetool "meld"]
	path = /usr/bin/meld
